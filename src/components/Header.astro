---
const { title, imageSrc, imageAlt } = Astro.props;
---

<div class="flex flex-col">
  <div class="">
    <h1 class="text-2xl font-bold pb-8">{title}</h1>
  </div>
  <div class="flex flex-row">
    <div class="w-2/3">
      <slot />
    </div>
    <div class="w-1/3">
      <img src={imageSrc} alt={imageAlt} />
    </div>
  </div>
</div>
