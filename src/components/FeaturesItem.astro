---
interface Props {
  title: string
  icon: string
}

const { title, icon } = Astro.props
---

<div class="relative">
  <dt>
    <div
      class="absolute flex items-center justify-center h-12 w-12 rounded-full bg-blue-500 text-white"
    >
      <img src={icon} alt={title} class="h-8 w-8" />
    </div>
    <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
      {title}
    </p>
  </dt>
  <dd class="mt-2 ml-16 text-base text-gray-500">
    <slot />
  </dd>
</div>
