---
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
  </head>

  <body class="flex flex-col min-h-screen bg-gray-100 text-gray-700 text-lg">
    <!-- Шапка -->
    <header>
      <div class="container mx-auto">
        <!-- Верхняя строка с логотипом, Nosotros и Contacto -->
        <div
          class="flex flex-col md:flex-row justify-between items-center md:items-center"
        >
          <!-- Логотип всегда видимый с увеличенными отступами на больших экранах -->
          <div class="w-full md:w-1/2 md:flex-shrink-0 mb-4 md:mb-0 p-4 md:p-8">
            <a href="/"
              ><img src="/logo.png" alt="Centro de Idiomas Esperanto" /></a
            >
          </div>

          <nav
            class="flex md:flex items-center md:bg-transparent bg-orange-500 p-4 text-white md:text-stone-900 w-full justify-center md:justify-end md:p-8"
          >
            <ul class="flex items-center space-x-4 font-bold">
              <li class="inline-block text-center">
                <a href="/nosotros" class="nav-link">Nosotros</a>
              </li>
              <li class="inline-block text-center">
                <a href="/contacto" class="nav-link">Contacto</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <!-- Нижняя строка со списком языков -->
    <nav class="container mx-auto mt-4">
      <ul
        class="flex flex-wrap justify-center space-x-4 font-bold text-lg px-4"
      >
        <li>
          <span class="pr-2">🇺🇸</span><a
            href="/idiomas/ingles"
            class="hover:underline">Inglés</a
          >
        </li>
        <li>
          <span class="pr-2">🇦🇷</span><a
            href="/idiomas/espanol"
            class="hover:underline">Español</a
          >
        </li>
        <li>
          <span class="pr-2">🇭🇺</span><a
            href="/idiomas/hungaro"
            class="hover:underline">Húngaro</a
          >
        </li>
        <li>
          <span class="pr-2">🇩🇪</span><a
            href="/idiomas/aleman"
            class="hover:underline">Alemán</a
          >
        </li>
        <li>
          <span class="pr-2">🇨🇳</span><a
            href="/idiomas/chino"
            class="hover:underline">Chino</a
          >
        </li>
        <li>
          <span class="pr-2">🇷🇺</span><a
            href="/idiomas/ruso"
            class="hover:underline">Ruso</a
          >
        </li>
        <li>
          <span class="pr-2">🇫🇷</span><a
            href="/idiomas/frances"
            class="hover:underline">Francés</a
          >
        </li>
        <li>
          <span class="pr-2">🇮🇹</span><a
            href="/idiomas/italiano"
            class="hover:underline">Italiano</a
          >
        </li>
        <li>
          <span class="pr-2">🇵🇹</span><a
            href="/idiomas/portugues"
            class="hover:underline">Portugués</a
          >
        </li>
      </ul>
      <ul
      class="flex flex-wrap justify-center space-x-4 font-bold text-lg px-4 py-2 my-2 bg-gray-200 shadow-sm"
    >
    <li >
      <span class="pr-2"></span><a
      href="/xrusos"
      class="hover:underline ">Испанский для русскоязычных</a
    >
    </li>
      </ul>
    </nav>

    <!-- JavaScript скрипт -->
    <script>
      const currentUrl = window.location.pathname;

      document.querySelectorAll("a").forEach((link) => {
        if (link.getAttribute("href") === currentUrl) {
          link.setAttribute("class", "text-gray-500 cursor-text");
          link.setAttribute("onclick", "return false;");
        }
      });
    </script>

    <section
      class="flex-grow container mx-auto my-8 p-8 bg-white shadow-md hover:"
    >
      <slot />
    </section>

    <!-- Подвал -->
    <footer class="bg-orange-500 p-4 text-white text-center mt-auto">
      <p>&copy; 2004-2024 Centro de Idiomas Esperanto</p>
    </footer>
  </body>
</html>
